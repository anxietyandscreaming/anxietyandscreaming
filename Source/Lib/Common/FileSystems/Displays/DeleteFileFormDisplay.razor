<div class="ci_ide_delete-file-form-display"
     @onkeydown="HandleOnKeyDown">

    <div>
        @* The text is: "Delete" or "Delete Recursively" *@
        <em class="ci_em">
            Delete
            @if (AbsolutePath.IsDirectory)
            {
                <text>&nbsp;Recursively</text>
            }
        </em>

        :
        &nbsp;

        <em class="ci_em" title="@AbsolutePath.Value">
            @AbsolutePath.Name
        </em>

        @if (AbsolutePath.IsDirectory)
        {
            <div>
                AND
                <em class="ci_em">
                    AT LEAST
                    @_countOfImmediateChildren
                </em>
                child files.
            </div>
        }
    </div>

    <div style="display: flex; justify-content: space-between;">
        <button class="ci_button"
                @onclick="DeleteFileOnClick">
            Delete
        </button>

        <button class="ci_button"
                @ref="_cancelButtonElementReference"
                @onclick="CancelOnClick">
            Cancel
        </button>
    </div>
</div>
<div class="ci_ide_project-template"
@onclick="async () => await OnProjectTemplateSelectedEventCallback.InvokeAsync(ProjectTemplate).ConfigureAwait(false)">

    <div class="ci_ide_project-template-title @IsActiveCssClass">
        @ProjectTemplate.TemplateName (@ProjectTemplate.ShortName)
    </div>
    
    <div class="ci_ide_project-template-body">
        <div class="ci_ide_project-template-body-entry">
            <em class="ci_em">@ProjectTemplate.Language</em>
            @ProjectTemplate.Tags
        </div>
    </div>
</div>